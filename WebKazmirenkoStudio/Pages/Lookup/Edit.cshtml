@page
@model WebKazmirenkoStudio.Pages.Lookup.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Справочник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LookupModel.Code" class="control-label"></label>
                <input asp-for="LookupModel.Code" class="form-control" />
                <span asp-validation-for="LookupModel.Code" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="LookupModel.Caption" class="control-label"></label>
                <input asp-for="LookupModel.Caption" class="form-control" />
                <span asp-validation-for="LookupModel.Caption" class="text-danger"></span>
            </div>
            <br />
            <input type="hidden" asp-for="LookupModel.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="./Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
