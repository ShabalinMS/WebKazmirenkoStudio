@page
@model WebKazmirenkoStudio.Pages.ProductInOrder.EditModel
@using WebKazmirenkoStudio.Properties.Resources

@{
    ViewData["Title"] = ResourcesString.ProductInOrder;
    ViewData["SaveButton"] = ElementPageResource.SaveButton;
    ViewData["BackCaption"] = ElementPageResource.BackCaption;
    ViewData["EditCaption"] = ElementPageResource.EditCaption;
}

<h1>@ViewData["EditCaption"]</h1>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductInOrderModel.Product" class="control-label"></label>
                @Html.DropDownListFor(
                model => model.product.SelectedItem,
                Model.product.Collection
                )
                <span asp-validation-for="ProductInOrderModel.Product.Id" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ProductInOrderModel.Order" class="control-label"></label>
                @Html.DropDownListFor(
                        model => model.order.SelectedItem,
                        Model.order.Collection
                    )
                <span asp-validation-for="ProductInOrderModel.Order.Id" class="text-danger"></span>
            </div>
            <br />
            <input type="hidden" asp-for="ProductInOrderModel.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
