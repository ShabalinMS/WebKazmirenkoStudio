@page
@model WebKazmirenkoStudio.Pages.Warehouse.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Склад</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WarehouseModel.RawMaterialCaption" class="control-label"></label>
                @Html.DropDownListFor(
                    model => model.RawMaterialCaption.SelectedItem,
                    Model.RawMaterialCaption.Collection
                )
                <span asp-validation-for="WarehouseModel.RawMaterialCaption" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="WarehouseModel.Quantity" class="control-label"></label>
                <input asp-for="WarehouseModel.Quantity" class="form-control" />
                <span asp-validation-for="WarehouseModel.Quantity" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="WarehouseModel.MeasureOfMeasurement" class="control-label"></label>
                @Html.DropDownListFor(
                    model => model.MeasureOfMeasurement.SelectedItem,
                    Model.MeasureOfMeasurement.Collection
                )
                <span asp-validation-for="WarehouseModel.MeasureOfMeasurement" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="WarehouseModel.Id" />
            <br />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="./Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
